# Database Configuration
DB_DRIVER=sqlite3
DB_DSN=./s3scanner.db

# Scanner Configuration
ENABLE_OTX=true
ENABLE_IOC=true
ENABLE_YARA=true
IOC_PATH=rules/ioc/
YARA_PATH=rules/yara/
YARA_CMD=yara
OTX_API_KEY=your-otx-api-key

# S3 Configuration
S3_BUCKET=your-bucket-name
S3_PREFIX=
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_ENDPOINT=https://s3.amazonaws.com

# Worker Configuration
WORKER_COUNT=0

# Reporter Configuration
# Reporter types: json, elasticsearch, loki, prometheus
REPORTER_TYPE=json
REPORTER_PATH=./scan-results.json

# Elasticsearch Configuration (if using elasticsearch reporter)
ES_URL=http://localhost:9200
ES_INDEX=s3-scan-results

# Loki Configuration (if using loki reporter)
LOKI_URL=http://localhost:3100

# Prometheus Configuration (if using prometheus reporter)
PROMETHEUS_URL=http://localhost:9090
